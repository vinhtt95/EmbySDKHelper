<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vinhtt.emby.sdkv4.MainController" spacing="10.0">
    <children>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu mnemonicParsing="false" text="Tệp">
                    <items>
                        <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" text="Đăng xuất" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <VBox spacing="15.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Chọn loại Metadata:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="typeComboBox" prefWidth="150.0" />
                    </children>
                </HBox>

                <TitledPane fx:id="copyPane" animated="false" text="Copy Hàng loạt">
                    <content>
                        <VBox spacing="8.0">
                            <Label text="Item Mẫu (Copy từ đây):" />
                            <HBox spacing="5.0">
                                <TextField fx:id="txtCopyFromInfo" editable="false" promptText="Chưa chọn item mẫu" HBox.hgrow="ALWAYS"/>
                                <TextField fx:id="txtCopyFromItemID" visible="false" managed="false"/>
                                <Button fx:id="btnChooseCopyFrom" text="Chọn..." onAction="#handleChooseCopyFromClick"/>
                            </HBox>

                            <Label text="Thư mục Đích (Paste vào đây):" />
                            <HBox spacing="5.0">
                                <TextField fx:id="txtCopyToInfo" editable="false" promptText="Chưa chọn thư mục đích" HBox.hgrow="ALWAYS"/>
                                <TextField fx:id="txtCopyToParentID" visible="false" managed="false"/>
                                <Button fx:id="btnChooseCopyTo" text="Chọn..." onAction="#handleChooseCopyToClick"/>
                            </HBox>
                            <Button fx:id="btnRunCopy" onAction="#btnRunCopyClick" text="Thực thi Copy" />
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane fx:id="clearParentPane" animated="false" text="Xóa Hàng loạt theo Thư mục">
                    <content>
                        <VBox spacing="5.0">
                            <Label fx:id="clearParentLabel" text="ID Thư mục Đích (Xóa mọi [loại] trong thư mục này):" />
                            <TextField fx:id="txtClearByParentID" promptText="Nhập ID thư mục..." />
                            <Button fx:id="btnRunClearParent" onAction="#btnRunClearParentClick" text="Thực thi Xóa (Theo Thư mục)" />
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane fx:id="clearSpecificPane" animated="false" text="Xóa Cụ Thể">
                    <content>
                        <VBox spacing="8.0">
                            <Label fx:id="clearSpecificLabel" text="Tìm và Chọn [loại] cần xóa (Xóa [loại] này khỏi MỌI item):" />
                            <HBox spacing="10.0">
                                <TextField fx:id="searchField" promptText="Tìm tên..." HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnReloadList" onAction="#btnReloadListClick" text="Tải lại/Xóa tìm"/>
                            </HBox>
                            <ScrollPane fx:id="selectionScrollPane" fitToWidth="true" prefHeight="250.0" styleClass="scroll-pane">
                                <content>
                                    <FlowPane fx:id="selectionFlowPane" hgap="8.0" vgap="8.0">
                                        <padding><Insets top="5.0" bottom="5.0" left="5.0" right="5.0"/></padding>
                                    </FlowPane>
                                </content>
                            </ScrollPane>
                            <Button fx:id="btnRunClearSpecific" onAction="#btnRunClearSpecificClick" text="Thực thi Xóa đã chọn" />
                        </VBox>
                    </content>
                </TitledPane>
            </children>
        </VBox>
        <HBox fx:id="statusBar" alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <children>
                <Label fx:id="statusLabel" text="Sẵn sàng." HBox.hgrow="ALWAYS"/>
                <ProgressIndicator fx:id="statusIndicator" maxHeight="20.0" maxWidth="20.0" visible="false"/>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>