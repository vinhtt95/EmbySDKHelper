<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vinhtt.emby.sdkv4.MainController" spacing="10.0">
    <children>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu mnemonicParsing="false" text="Tệp"> <items>
                    <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" text="%menu.file.logout" />
                </items>
                </Menu>
            </menus>
        </MenuBar>

        <VBox spacing="15.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="%label.selectType" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="typeComboBox" prefWidth="150.0" />
                    </children>
                </HBox>

                <TitledPane fx:id="copyPane" animated="false" text="%pane.copy.title">
                    <content>
                        <VBox spacing="8.0">
                            <Label text="%label.copyFromId" />
                            <TextField fx:id="txtCopyFromItemID" promptText="%prompt.copyFromId" />

                            <Label text="%label.copyToParent" />
                            <TextField fx:id="txtCopyToParentID" promptText="%prompt.copyToParent" />

                            <Button fx:id="btnRunCopy" onAction="#btnRunCopyClick" text="%button.executeCopy" />
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane fx:id="clearParentPane" animated="false" text="%pane.clearParent.title">
                    <content>
                        <VBox spacing="5.0">
                            <Label fx:id="clearParentLabel" text="ID Thư mục Đích (Xóa...):" />
                            <TextField fx:id="txtClearByParentID" promptText="%prompt.clearParentId" />

                            <Button fx:id="btnRunClearParent" onAction="#btnRunClearParentClick" text="Thực thi Xóa (Theo Thư mục)" />
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane fx:id="exportJsonPane" animated="false" text="%pane.exportJson.title">
                    <content>
                        <VBox spacing="8.0">
                            <Label text="%label.exportJsonParentId" />
                            <TextField fx:id="txtExportJsonParentID" promptText="%prompt.exportJsonParentId" />
                            <Button fx:id="btnRunExportJson" onAction="#btnRunExportJsonClick" text="%button.exportJson" />
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane fx:id="clearSpecificPane" animated="false" text="%pane.clearSpecific.title">
                    <content>
                        <VBox spacing="8.0">
                            <Label fx:id="clearSpecificLabel" text="Tìm và Chọn [loại] cần xóa..." />
                            <HBox spacing="10.0">
                                <TextField fx:id="searchField" promptText="%prompt.search" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnReloadList" onAction="#btnReloadListClick" text="%button.reloadList"/>
                            </HBox>
                            <ScrollPane fx:id="selectionScrollPane" fitToWidth="true" prefHeight="250.0" styleClass="scroll-pane">
                                <content>
                                    <FlowPane fx:id="selectionFlowPane" hgap="8.0" vgap="8.0">
                                        <padding><Insets top="5.0" bottom="5.0" left="5.0" right="5.0"/></padding>
                                    </FlowPane>
                                </content>
                            </ScrollPane>

                            <Button fx:id="btnRunClearSpecific" onAction="#btnRunClearSpecificClick" text="Thực thi Xóa đã chọn" />
                        </VBox>
                    </content>
                </TitledPane>
            </children>
        </VBox>

        <HBox fx:id="statusBar" alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <children>
                <Label fx:id="statusLabel" text="%status.ready" HBox.hgrow="ALWAYS"/>
                <ProgressIndicator fx:id="statusIndicator" maxHeight="20.0" maxWidth="20.0" visible="false"/>
            </children>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>